<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CssExample.MainPage"             
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             >
    <ContentPage.Resources>
        <StyleSheet Source="Resources/Styles/NewStyle.css" />
    </ContentPage.Resources>
    <Grid>
        <StackLayout>
            <Label Text="Hello" StyleClass="myCustomLabel"/>
            <Button Text="Click Me" StyleClass="myCustomButton"/>
        </StackLayout>

        <Grid MaximumWidthRequest="200" MaximumHeightRequest="200">
            <Button Text="Hello Other Button" StyleClass="otherButton"/>
        </Grid>
    </Grid>

</ContentPage>
